<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.InfoFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/tv_month_cash"
        android:layout_width="380dp"
        android:layout_height="42dp"
        android:background="@drawable/button_exit"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/usd" />
        <TextView
            android:id="@+id/tv_usd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100.00"
            android:textColor="@color/light_grey"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_light"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_baseline_euro_24"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/tv_euro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100.00"
            android:textColor="@color/light_grey"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_light"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/gbt"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/tv_gbp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100.00"
            android:textColor="@color/light_grey"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_light"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:background="@drawable/information"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Связаться с банком"
            android:textColor="@color/light_grey"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/roboto_light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Лицензия и условия"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/light_grey"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Версия"
            android:layout_marginTop="10dp"
            android:textColor="@color/light_grey"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/roboto_light"/>

    </LinearLayout>

</LinearLayout>